{
  "context_servers": {
    "github-activity-summarizer": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "current_line_highlight": "gutter",
  "icon_theme": "Colored Zed Icons Theme Light",
  "agent": {
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "active_pane_modifiers": {
    "border_size": 1,
    "inactive_opacity": 1
  },
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "html": true,
    "scala": true,
    "tokyo-night": true
  },
  "base_keymap": "JetBrains",
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_size": 12,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/target",
    "**/.bloop",
    "**/.metals"
  ],
  "formatter": "language_server",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "edit_debounce_ms": 700,
    "enabled": true,
    "scroll_debounce_ms": 50,
    "show_background": false,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": false,
    "toggle_on_modifiers_press": null
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Documents/Zed"
  },
  "lsp": {
    "metals": {
      "binary": {
        "arguments": [
          "-Dmetals.http=on",
          "-Xss4m",
          "-XX:+UseStringDeduplication",
          "-XX:+IgnoreUnrecognizedVMOptions",
          "-XX:ZCollectionInterval=5",
          "-XX:ZUncommitDelay=30",
          "-XX:+UseZGC",
          "-Xmx2G"
        ]
      },
      "initialization_options": {
        "isHttpEnabled": true
      },
      "settings": {
        "defaultBspToBuildTool": false,
        "startMcpServer": true,
        "inlayHints": {
          "implicitArguments": {
            "enable": false
          },
          "implicitConversions": {
            "enable": false
          },
          "inferredTypes": {
            "enable": true
          },
          "typeParameters": {
            "enable": true
          },
          "hintsInPatternMatch": {
            "enable": true
          },
          "hintsXRayMode": {
            "enable": true
          }
        }
      }
    }
  },
  "project_panel": {
    "indent_size": 10
  },
  "relative_line_numbers": true,
  "selection_highlight": true,
  "tab_size": 2,
  "tabs": {
    "activate_on_close": "history",
    "close_position": "left",
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hover",
    "show_diagnostics": "all"
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "button": true,
    "copy_on_select": false,
    "default_height": 320,
    "default_width": 640,
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [
          ".env",
          ".envrc",
          "env",
          ".venv",
          "venv"
        ]
      }
    },
    "dock": "right",
    "env": {},
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_features": null,
    "font_size": 11,
    "line_height": "comfortable",
    "option_as_meta": false,
    "scrollbar": {
      "show": null
    },
    "shell": {
      "program": "/opt/homebrew/bin/zsh"
    },
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory"
  },
  "theme": {
    "mode": "dark",
    "light": "macOS Classic Light",
    "dark": "Tokyo Night"
  },
  "ui_font_size": 14,
  "vim": {
    "use_system_clipboard": "always"
  },
  "vim_mode": true
}
